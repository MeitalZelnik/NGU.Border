<UserControl x:Class="NGU.App.Client.Control.Biometric"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NGU.App.Client.Control"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="30">
        <StackPanel VerticalAlignment="Center">
            <Border Height="250" Width="200" BorderThickness="1" BorderBrush="Black" CornerRadius="30">
                <!--<Image Source="{StaticResource SystemGeneralBlackListIcon}" ></Image>-->
                <Image Stretch="UniformToFill" Source="{StaticResource SystemGeneralBlackListIcon}">
                    <!--<Image.Source>
                        <BitmapImage UriSource="dashboard.jpg"/>
                    </Image.Source>-->
                </Image>
            </Border>

            <ContentPresenter Height="200" Width="250"  Content="{Binding HandsVM}"/>

        </StackPanel>
    </Border>
</UserControl>
